{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base", "prettier"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    // Mais regras em https://eslint.org/docs/rules/
    // Airbnb referÃªncia https://github.com/airbnb/javascript
    "block-scoped-var": "error",
    "class-methods-use-this": "error",
    "no-implicit-globals": "error",
    "no-restricted-globals": "error",
    "no-import-assign": "error"
  }
}
